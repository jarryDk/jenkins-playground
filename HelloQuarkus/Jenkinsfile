pipeline {

    // agent any
    agent  { label 'quarkus' }

    stages {
        stage('Build') {
            steps {
                sh 'cd HelloQuarkus && ./mvnw clean package'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing HelloPipeline ..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying HelloPipeline ..'
            }
        }
    }
}